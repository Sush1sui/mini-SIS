{
  "name": "server",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "migrate": "bun run ./scripts/run_sql.ts ./db/migrations/001_init.sql",
    "seed": "bun run ./scripts/run_sql.ts ./db/seed.sql && bun run ./scripts/seed_admin.ts",
    "db:setup": "bun run migrate && bun run seed",
    "smoke": "bash ./scripts/smoke_test.sh",
    "start": "bun src/index.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "hono": "^4.11.7",
    "pg": "^8.17.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "typescript": "^5.9.3"
  }
}
